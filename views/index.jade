doctype html
html
  head
    title Login Page
    link(href='stylesheets/style.css', media='all', rel='stylesheet', type='text/css')
    script(type='text/javascript').
      function login(username, password) {
        if (username == "demo" && password == "mode") {
          window.location = "welcome.html";
        } else {
          window.location = "error.html";
        }
      }
  body
    #container
      h1 Login Page
      p Please input your user name and password and click the login button.
      form(name='login_form', onsubmit='login(this.username_field.value, this.password_field.value); return false;')
        table
          tr
            td
              label(for='username_field') User Name:
            td
              input#username_field(size='30', type='text')
          tr
            td
              label(for='password_field') Password:
            td
              input#password_field(size='30', type='password')
          tr
            td Â 
            td
              input#login_button(type='submit', value='LOGIN')

